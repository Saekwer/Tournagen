<div class="modal-background"></div>
<div class="modal-content">
  <button class="close">&times;</button>

  <h2><%= tournament.isNew() ? 'New Tournament' : 'Edit Tournament' %></h2>

  <form>
    <label>
      Title<br>
      <input type="text" name="tournament[title]" class="title-field form-control" placeholder="Title" value="">
    </label>

    <br>
    <label>
      Num. Teams (max 64)
      <select name="tournament[max_teams]">
        <option value=""></option>
        <option value="4">4</option>
        <option value="8">8</option>
        <option value="16">16</option>
        <option value="32">32</option>
        <option value="64">64</option>
      </select>
    </label>

    <br>
    <label>
      Description (optional)<br>
      <textarea name="tournament[description]" rows="8" cols="40" class="form-control" placeholder="Description"></textarea>
    </label>

    <br>
    <input type="submit" class="btn btn-primary submit-tournament-form" value="Submit">
  </form>
</div>
